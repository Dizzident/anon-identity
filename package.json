    "decentralized-identity",
    "self-sovereign-identity",
    "zero-knowledge-proof",
    "selective-disclosure",
    "privacy",
    "web3",
    "identity"
  ],
  "author": "Dizzident",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dizzident/anon-identity/issues"
  },
  "homepage": "https://github.com/Dizzident/anon-identity#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.23",
    "hardhat": "^2.24.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.8.0",
    "ethers": "^6.14.3",
    "jose": "^6.0.11",
    "lru-cache": "^11.1.0",
    "multibase": "^4.0.6",
    "multicodec": "^3.2.1",
    "uuid": "^11.1.0"
  }
